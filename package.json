{
  "version": "0.2.0",
  "name": "solid-stripe",
  "description": "Solid wrapper for Stripe.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "browser": {
        "require": "./dist/cjs/index.js",
        "import": "./dist/esm/index.js"
      },
      "node": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "pnpm build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/solid-stripe.git"
  },
  "keywords": [
    "stripe",
    "elements",
    "solid",
    "typescript"
  ],
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/solid-stripe#readme",
  "peerDependencies": {
    "@stripe/stripe-js": "*",
    "solid-js": ">=1.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.29.4",
    "@stripe/stripe-js": "^1.42.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.26.0",
    "eslint-plugin-solid": "^0.8.0",
    "rollup": "^2.77.2",
    "rollup-preset-solid": "^1.4.0",
    "solid-js": ">=1.6.1",
    "typescript": "^4.7.4"
  }
}
